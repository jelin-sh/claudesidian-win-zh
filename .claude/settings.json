{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/first-run-check.mjs"
          },
          {
            "type": "command",
            "command": "pnpm run check-updates --silent"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "node ${CLAUDE_PROJECT_DIR}/.claude/hooks/skill-discovery.mjs",
            "timeout": 5000,
            "type": "command"
          }
        ]
      }
    ]
  }
}
